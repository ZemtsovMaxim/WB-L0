# Используйте официальный образ Golang
FROM golang:latest

# Установите переменную окружения для Go
ENV GO111MODULE=on

# Установите рабочую директорию
WORKDIR /app

# Скопируйте файлы проекта в контейнер
COPY . .

# Установите рабочую директорию
WORKDIR /app/cmd

# Соберите и установите приложение
RUN go build -o main .

# Запустите приложение при старте контейнера
CMD sleep 10 && /app/cmd/main
